# Railway Environment Variables Template
# Copy this to Railway dashboard and set the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here-change-this

# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis Configuration (Railway will provide this)
REDIS_URL=redis://username:password@host:port

# Celery Configuration
CELERY_BROKER_URL=redis://username:password@host:port
CELERY_RESULT_BACKEND=redis://username:password@host:port

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Security Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://username:password@host:port
RATELIMIT_DEFAULT=200 per day;50 per hour

# File Upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
